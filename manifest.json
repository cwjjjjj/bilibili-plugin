{
  "manifest_version": 3,
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "name": "youtube-ads-skipper",
  "version": "0.0.1",
  "action": { "default_popup": "index.html" },
  "content_scripts": [
    {
      "js": ["src/content/index.tsx"],
      "matches": ["*://*.youtube.com/*"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "src/background"
  }
}
